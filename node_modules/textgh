<div class="outerContainer">
  <ng-container *ngIf="isLoading; else notLoading">
    <div class="spinner-container">
      <mat-spinner></mat-spinner>
    </div>
  </ng-container>

  <ng-template #notLoading>
    <div class="pageContent">
      <!-- Buttons for Graph and Table -->
      <div class="button-container">
        <button
          class="icon-button"
          [ngClass]="{ active: isGraphVisible }"
          (click)="toggleGraph()"
        >
          <mat-icon>show_chart</mat-icon>
        </button>
        <button
          class="icon-button"
          [ngClass]="{ active: isTableVisible }"
          (click)="toggleTable()"
        >
          <mat-icon>apps</mat-icon>
        </button>
      </div>

      <!-- Graph Section -->
      <div *ngIf="isGraphVisible" class="graph-section">
        <sort-tracker-graph-axes
          [sortTrackerData]="sortTrackers | async"
          [cellWidth]="cellWidth"
        ></sort-tracker-graph-axes>
      </div>

      <!-- Table Section -->
      <div *ngIf="isTableVisible" class="table-section">
        <sort-tracker-table
          [sortTrackers]="sortTrackers"
          *ngIf="sortTrackers | async"
        ></sort-tracker-table>
      </div>
    </div>
  </ng-template>
</div>

import { Component } from '@angular/core';

@Component({
  selector: 'app-sort-tracker',
  templateUrl: './sort-tracker.component.html',
  styleUrls: ['./sort-tracker.component.css']
})
export class SortTrackerComponent {
  isGraphVisible: boolean = true; // Controls graph visibility
  isTableVisible: boolean = true; // Controls table visibility

  toggleGraph(): void {
    this.isGraphVisible = !this.isGraphVisible;
  }

  toggleTable(): void {
    this.isTableVisible = !this.isTableVisible;
  }
}
.button-container {
  display: flex;
  gap: 8px;
  margin-bottom: 10px;
  justify-content: flex-end;
}

.icon-button {
  background-color: #f3f3f3;
  border: none;
  border-radius: 4px;
  padding: 8px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease;
}

.icon-button.active {
  background-color: #2196f3; /* Blue when active */
  color: white;
}

.graph-section,
.table-section {
  margin-top: 20px;
}

.graph-section {
  background-color: #eef5ff;
  padding: 10px;
}

.table-section {
  background-color: #f9f9f9;
  padding: 10px;
}
