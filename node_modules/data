export enum WeeklySummaryColumns {
  Volume = 'Volume',
  PPH = 'PPH',
  Span = 'Span',
  FlowHr = 'Flow/Hr',
  Hours = 'Hours',
  Staffing = 'Staffing',
  PD_Day = 'PD Day',
  Pr_Rate = 'Pr Rate',
  Smalls = 'Smalls',
  Irregulars = 'Irregulars'
}

export enum WeeklySummarySubColumns {
  // Hours subcolumns
  Total = 'Total',
  Direct = 'Direct',
  Indirect = 'Indirect',

  // Staffing subcolumns
  Assigned = 'Assigned',
  Worked = 'Worked',
  Absent = '% Absent',

  // Smalls subcolumns
  SmallsVolume = '% Smalls',
  SmallsPPH = 'PPH',

  // Irregulars subcolumns
  IrregPercent = '% Irregs',
  IrregVolume = 'Volume',
  IrregPPH = 'PPH'
}

import { WeeklySummaryColumns } from './weekly-summary-columns';
import { WeeklySummarySubColumns } from './weekly-summary-subcolumns';
import { Column, Subcolumn, TableMetaData } from './table-meta-data';

export class WeeklySummaryTableMetaData extends TableMetaData {
  constructor() {
    super();

    this.columns = [
      new Column(WeeklySummaryColumns.Volume, [], true),
      new Column(WeeklySummaryColumns.PPH, [], true),
      new Column(WeeklySummaryColumns.Span, [], true),
      new Column(WeeklySummaryColumns.FlowHr, [], true),
      new Column(WeeklySummaryColumns.Hours, [
        new Subcolumn(WeeklySummarySubColumns.Total, true),
        new Subcolumn(WeeklySummarySubColumns.Direct, true),
        new Subcolumn(WeeklySummarySubColumns.Indirect, true)
      ], true),
      new Column(WeeklySummaryColumns.Staffing, [
        new Subcolumn(WeeklySummarySubColumns.Assigned, true),
        new Subcolumn(WeeklySummarySubColumns.Worked, true),
        new Subcolumn(WeeklySummarySubColumns.Absent, true)
      ], true),
      new Column(WeeklySummaryColumns.PD_Day, [], true),
      new Column(WeeklySummaryColumns.Pr_Rate, [], true),
      new Column(WeeklySummaryColumns.Smalls, [
        new Subcolumn(WeeklySummarySubColumns.SmallsVolume, true),
        new Subcolumn(WeeklySummarySubColumns.SmallsPPH, true)
      ], true),
      new Column(WeeklySummaryColumns.Irregulars, [
        new Subcolumn(WeeklySummarySubColumns.IrregPercent, true),
        new Subcolumn(WeeklySummarySubColumns.IrregVolume, true),
        new Subcolumn(WeeklySummarySubColumns.IrregPPH, true)
      ], true)
    ];
  }
}

