dispatchShowAllEvent(): void {
    let _tmd: TableMetaData;

    this.tableMetaData$.pipe(take(1)).subscribe((val) => (_tmd = val));
    let _changes: ColumnVisibilityEvent[] = [];

    for (let col of _tmd.columns) {
        // Check if column has subcolumns
        if (col.subcolumns && col.subcolumns.length > 0) {
            for (let subcol of col.subcolumns) {
                if (subcol.isVisible && !subcol.isDisabled) {
                    _changes.push({
                        columnName: col.columnName,
                        subcolumnName: subcol.columnName,
                        state: true,
                    });
                }
            }
        } else {
            // Add column without subcolumns to the changes
            _changes.push({
                columnName: col.columnName,
                subcolumnName: null,
                state: true,
            });
        }
    }

    // Dispatch visibility toggle if there are changes
    if (_changes.length > 0) {
        this.WeeklySummaryStore.dispatch(
            new weeklySummaryReportActions.ToggleColumnVisibility(_changes)
        );
    }

    // Clear current Quick View regardless
    this.WeeklySummaryStore.dispatch(
        new weeklySummaryReportActions.ClearCurrentQuickView()
    );
}