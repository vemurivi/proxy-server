$baseUnitWidth: 80;

// Base mixin for cell size and alignment
@mixin baseUnit($size) {
  width: ($size * $baseUnitWidth + 1px);
  @if ($size > 1) {
    width: ($size * $baseUnitWidth + 1px + (-2 + ($size * 2 * 1px)));
  }
}

@mixin baseCell() {
  border-left: 1px solid black;
  border-right: 1px solid black;
  align-content: center;
  align-items: center;
  display: flex;
  justify-content: center;
}

// Apply cell styles dynamically
@for $i from 1 through 6 {
  [class*="-cell-#{$i}"] {
    @include baseUnit($i);
    @include baseCell();
  }
}

// Sticky first column and headers
.tableRow > [class*="-cell"]:first-of-type,
.subheader-cell-1.dayOfWeekHeader,
.header-cell-1.dayOfWeekHeader {
  position: sticky;
  left: 0;
  background-color: white;
  z-index: 3;
  border-right: 1px solid gray;
}

// Sticky header styles
.tableHeader > [class*="header-cell-1"] {
  position: sticky;
  top: 0;
  background-color: #f5f5f5;
  z-index: 4;
  font-weight: bold;
  text-transform: uppercase;
}

// General header styles
[class^="header-cell"] {
  height: 40px;
  font-weight: 700;
  text-transform: uppercase;
}

// Subheader styles
[class^="subheader-cell"] {
  height: 40px;
  font-weight: 600;
}

// Content cell styles
[class^="content-cell"] {
  height: 48px;
  text-align: center;
}

// Responsive styles
@media only screen and (max-width: 1300px) {
  $baseUnitWidth: 60;

  .tableHeader {
    height: 35px;
  }

  .content-cell {
    height: 29px;
  }

  .tableFooter {
    height: 12px;
  }
}

// Table container for scrolling
.tableContainer {
  font-size: 12px;
  overflow-x: auto; /* Enable horizontal scrolling */
  overflow-y: auto; /* Enable vertical scrolling */
}

// Table header adjustments
.tableHeader {
  height: 52px;
  display: flex;
  flex-direction: row;
  border-radius: 8px 8px 0px 0px;
  border: 1px solid black;
}

// Row adjustments
.tableRow {
  border-left: 1px solid black;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
  display: flex;
  flex-direction: row;

  // Average row styles
  &.averageRow {
    border-top: 1px solid black;
    border-bottom: unset;
  }

  &.last {
    border-bottom: unset;
  }
}

// Footer styles
.tableFooter {
  height: 24px;
  display: flex;
  flex-direction: row;
  border-radius: 0px 0px 8px 8px;
  border: 1px solid black;
}

// Row hover effect
.tableRow.tableContentRow:hover {
  border: 2px solid #2196f3 !important;
}

// Additional styles for right-side container
.rightsideContainer {
  display: flex;
  flex: 1;
  align-items: center;
  align-content: center;
  justify-content: flex-end;
  width: 100%;
}

.headerItem {
  padding-right: 3px;
  padding-left: 3px;
}

// Additional styles for highlighted rows
.tableRow.averageRow {
  border-top: 1px solid black;
  border-bottom: unset;
}

// Adjustments for table content rows
.tableContainer > .tableRow.tableContentRow {
  border-bottom: 1px dashed gray;
}

.tableContainer > .tableRow.tableContentRow.last {
  border-bottom: unset;
}

// Highlight hover effect for table rows
.tableRow.tableContentRow:hover {
  border: 2px solid #2196f3 !important;
}

// Styling for table footer
.tableFooter {
  height: 24px;
  display: flex;
  flex-direction: row;
  border-radius: 0px 0px 8px 8px;
  border: 1px solid black;
}

// Styling for day-of-week rows
.tableRow > [class*="dayOfWeek"] {
  font-weight: 700;
}

// Responsive adjustments for large screens
@media only screen and (max-width: 1800px) {
  .tableHeader {
    height: 42px;
  }

  .content-cell {
    height: 42px;
  }
}

// Final responsive styles
@media only screen and (max-width: 1300px) {
  $baseUnitWidth: 60;

  @mixin baseUnit($size) {
    width: ($size * $baseUnitWidth + 1px);
    @if ($size > 1) {
      width: ($size * $baseUnitWidth + 1px + (-2 + ($size * 1.5 * 1px)));
    }
  }

  @for $i from 1 through 6 {
    [class*="-cell-#{$i}"] {
      @include baseUnit($i);
      @include baseCell();
    }
  }

  // Header styles
  [class^="header-cell"] {
    height: 25px;
    font-weight: 700;
    text-transform: uppercase;
  }

  // Subheader styles
  [class^="subheader-cell"] {
    height: 25px;
    font-weight: 600;
  }

  // Content styles
  [class^="content-cell"] {
    height: 29px;
  }

  .tableContainer {
    font-size: 8px;
  }

  .tableHeader {
    height: 35px;
  }

  .tableFooter {
    height: 12px;
  }
}