case WeeklySummaryActionType.TOGGLE_COLUMN: {
    let _tmd: TableMetaData = Object.assign({}, state.weeklySummaryTableMetaData);
    let _rightNow = new Date().toISOString();

    for (var k = 0; k < _tmd.columns.length; k++) {
        let _col = _tmd.columns[k];

        // Check if the column matches
        if (_col.columnName === action.payload.columnName) {
            // If column has subcolumns, toggle its children logic
            if (_col.subcolumns && _col.subcolumns.length > 0) {
                for (let subCol of _col.subcolumns) {
                    subCol.isVisible = action.payload.state !== undefined 
                        ? action.payload.state 
                        : !subCol.isVisible;
                }
            }

            // Toggle column regardless of subcolumns
            _col.isToggled = action.payload.state !== undefined 
                ? action.payload.state 
                : !_col.isToggled;

            // Update timestamp
            _col.lastUpdated = _rightNow;
            _tmd.lastUpdated = _rightNow;

            // Break once the target column is updated
            break;
        }
    }

    return {
        ...state,
        weeklySummaryTableMetaData: _tmd,
    };
}