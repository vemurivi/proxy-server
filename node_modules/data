// Hours Subcolumns
export enum WeeklySummaryHours {
  Total = 'Total',
  Direct = 'Direct',
  Indirect = 'Indirect'
}

// Staffing Subcolumns
export enum WeeklySummaryStaffing {
  Assigned = 'Assigned',
  Worked = 'Worked',
  Absent = '% Absent'
}

// Smalls Subcolumns
export enum WeeklySummarySmalls {
  SmallsVolume = '% Smalls',
  SmallsPPH = 'PPH'
}

// Irregulars Subcolumns
export enum WeeklySummaryIrregulars {
  IrregPercent = '% Irregs',
  IrregVolume = 'Volume',
  IrregPPH = 'PPH'
}

// Volume Subcolumns (Newly Added)
export enum WeeklySummaryVolume {
  PlannedVolume = 'Planned Volume',
  ActualVolume = 'Actual Volume',
  PercentEfficiency = '% Eff'
}


import { WeeklySummaryColumns } from './weekly-summary-columns';
import {
  WeeklySummaryHours,
  WeeklySummaryStaffing,
  WeeklySummarySmalls,
  WeeklySummaryIrregulars,
  WeeklySummaryVolume
} from './weekly-summary-subcolumns';
import { Column, Subcolumn, TableMetaData } from './table-meta-data';

export class WeeklySummaryTableMetaData extends TableMetaData {
  constructor() {
    super();

    this.columns = [
      new Column(WeeklySummaryColumns.Volume, [
        new Subcolumn(WeeklySummaryVolume.PlannedVolume, true),
        new Subcolumn(WeeklySummaryVolume.ActualVolume, true),
        new Subcolumn(WeeklySummaryVolume.PercentEfficiency, true)
      ], true),
      new Column(WeeklySummaryColumns.PPH, [], true),
      new Column(WeeklySummaryColumns.Span, [], true),
      new Column(WeeklySummaryColumns.FlowHr, [], true),
      new Column(WeeklySummaryColumns.Hours, [
        new Subcolumn(WeeklySummaryHours.Total, true),
        new Subcolumn(WeeklySummaryHours.Direct, true),
        new Subcolumn(WeeklySummaryHours.Indirect, true)
      ], true),
      new Column(WeeklySummaryColumns.Staffing, [
        new Subcolumn(WeeklySummaryStaffing.Assigned, true),
        new Subcolumn(WeeklySummaryStaffing.Worked, true),
        new Subcolumn(WeeklySummaryStaffing.Absent, true)
      ], true),
      new Column(WeeklySummaryColumns.PD_Day, [], true),
      new Column(WeeklySummaryColumns.Pr_Rate, [], true),
      new Column(WeeklySummaryColumns.Smalls, [
        new Subcolumn(WeeklySummarySmalls.SmallsVolume, true),
        new Subcolumn(WeeklySummarySmalls.SmallsPPH, true)
      ], true),
      new Column(WeeklySummaryColumns.Irregulars, [
        new Subcolumn(WeeklySummaryIrregulars.IrregPercent, true),
        new Subcolumn(WeeklySummaryIrregulars.IrregVolume, true),
        new Subcolumn(WeeklySummaryIrregulars.IrregPPH, true)
      ], true)
    ];
  }
}

