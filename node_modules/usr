public pimpMyTimeSelection(isoString: string): string {
  console.log('entered date is ', isoString);
  
  // Convert the ISO string to a local date-time string in the desired format
  const localTime = new Date(isoString).toLocaleString('en-US', {
    hour12: false,  // This ensures a 24-hour time format
    timeZone: 'UTC' // Modify if you want a specific timezone
  });

  console.log('local time is ', localTime);

  // Splitting date and time parts
  const [datePart, timePart] = localTime.split(', '); 

  // Split time part for hours and minutes
  const [hours, minutes] = timePart.split(':').map(part => parseInt(part, 10));

  // Reconstructing the new ISO string in the desired format
  const newIsoString = `${datePart}T${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:00.000Z`;

  console.log('converted time is ', newIsoString);

  return newIsoString;
}