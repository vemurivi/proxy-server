public pimpMyTimeSelection(isoString: string): string {
  // Create a new Date object from the ISO string
  const date = new Date(isoString);

  // Get the local time string
  const localTime = date.toLocaleTimeString();

  // Extract the date and time parts
  const datePart = isoString.substring(0, isoString.indexOf('T'));
  const timePart = isoString.substring(isoString.indexOf('T') + 1, isoString.indexOf('T') + 6);

  console.log('Time Part:', timePart); // Log for debugging
  
  // Extract hours and minutes properly
  const hours = parseInt(timePart.substring(0, 2), 10);
  const minutes = parseInt(timePart.substring(3, 5), 10);

  // Determine if the time is AM or PM based on localTime
  const isPM = localTime.includes('PM');

  // Convert to 24-hour format
  const hours24 = isPM && hours !== 12 ? hours + 12 : hours === 12 && !isPM ? 0 : hours;

  // Format the new ISO string with padded hours and minutes
  const newIsoString = `${datePart}T${hours24.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;

  console.log('Converted Time:', newIsoString); // Log for debugging
  
  return newIsoString;
}