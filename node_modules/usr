public pimpMyTimeSelection(isoString: string): string {
  const timePart = isoString.substring(isoString.indexOf('T') + 1, isoString.indexOf('T') + 6);

  // Parse hours and minutes from the input directly
  const hours = parseInt(timePart.substring(0, 2), 10);
  const minutes = parseInt(timePart.substring(3, 5), 10);

  // Build the new ISO string, preserving the original date
  const newIsoString = `${isoString.substring(0, 10)}T${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:00`;

  return newIsoString;
}