public pimpMyTimeSelection(isoString: string): string {
  const date = new Date(isoString);
  const timePart = isoString.substring(isoString.indexOf('T') + 1, isoString.indexOf('T') + 6);
  console.log(timePart);

  const hours = date.getUTCHours();
  const minutes = date.getUTCMinutes();
  const seconds = date.getUTCSeconds();

  const hours24 = hours;
  const newIsoString = `${isoString.substring(0, 10)}T${hours24.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
  
  return newIsoString;
}