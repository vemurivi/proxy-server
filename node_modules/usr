function calculateTimeZoneByOffset(offsetMinutes: number): string {
    // Get the current time in the browser's local time zone
    const browserDate = new Date();
    
    // Log the browser's current date and time
    console.log('Browser Date:', browserDate);

    // Convert the offset into milliseconds and add it to the current UTC time
    const offsetMilliseconds = offsetMinutes * 60 * 1000;
    
    // Get the current UTC time
    const utcTime = browserDate.getTime() - (browserDate.getTimezoneOffset() * 60 * 1000);
    
    // Calculate the new local time by applying the offset
    const adjustedTime = new Date(utcTime + offsetMilliseconds);
    
    // Log the adjusted date and time
    console.log('Adjusted Date:', adjustedTime);

    // Determine the time zone of the adjusted time using the browser's settings
    const localTimeZone = Intl.DateTimeFormat('en-US', {
        timeZoneName: 'short'
    }).format(adjustedTime);

    // Log the calculated local time zone
    console.log('Calculated Local Time Zone:', localTimeZone);

    // Return the calculated time zone
    return localTimeZone;
}

// Example usage:
const offsetMinutes = -240;  // Example offset for UTC-4
const calculatedTimeZone = calculateTimeZoneByOffset(offsetMinutes);
console.log('Calculated Time Zone:', calculatedTimeZone);
