pimpMyTimeSelection(isoString: string): string {
  console.log('User Entered Datetime is', isoString);
  
  // Convert isoString to a Date object
  const date = new Date(isoString);

  // Calculate the offset in milliseconds
  const offsetMilliseconds = this.offset * 60 * 1000;

  // Apply the offset to the date
  const adjustedDate = new Date(date.getTime() - offsetMilliseconds);

  // Get the parts of the date to manually format the adjusted date
  const year = adjustedDate.getUTCFullYear();
  const month = ('0' + (adjustedDate.getUTCMonth() + 1)).slice(-2);
  const day = ('0' + adjustedDate.getUTCDate()).slice(-2);
  const hours = ('0' + adjustedDate.getUTCHours()).slice(-2);
  const minutes = ('0' + adjustedDate.getUTCMinutes()).slice(-2);
  const seconds = ('0' + adjustedDate.getUTCSeconds()).slice(-2);

  // Manually construct the ISO string without shifting the time
  const adjustedISOString = `${year}-${month}-${day}T${hours}:${minutes}:${seconds}.000Z`;

  console.log('User Entered UTC Datetime string after conversion is', adjustedISOString);

  // Return the manually adjusted ISO string
  return adjustedISOString;
}