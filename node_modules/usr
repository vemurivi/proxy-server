pimpMyTimeSelection(isoString: string, offset: number): string {
    console.log('User Entered UTC Datetime is', isoString);

    // Convert isoString to a Date object
    const date = new Date(isoString);

    // Calculate the offset in milliseconds
    const offsetMilliseconds = offset * 60 * 1000;

    // Create a new date adjusted for the offset
    const adjustedDate = new Date(date.getTime() + offsetMilliseconds);

    // Use substring on the adjustedDate to keep the original substring logic
    const adjustedISOString = adjustedDate.toISOString();
    
    return adjustedISOString.substring(0, adjustedISOString.indexOf(':') - 2) + '00.000Z';
}