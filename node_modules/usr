try
{
    combinedRow = JsonConvert.DeserializeObject<UldLink>(cellChunk.Value.ToStringUtf8());
}
catch (JsonSerializationException ex)
{
    // Specific handling for JSON serialization issues
    Log.Error($"Deserialization failed for chunk: {cellChunk.Value.ToStringUtf8()}", ex);
}
catch (Exception ex)
{
    // General error handling for other types of exceptions
    Log.Error($"Unexpected error: {ex.Message}", ex);
}