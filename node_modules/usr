function calculateTimeZoneByOffset(offsetMinutes: number): string {
    // Get the current UTC time directly
    const utcDate = new Date(new Date().toISOString());

    // Convert the offset into milliseconds
    const offsetMilliseconds = offsetMinutes * 60 * 1000;

    // Calculate the local time by adding the offset to the UTC time
    const adjustedTime = new Date(utcDate.getTime() + offsetMilliseconds);

    // Log the dates for debugging
    console.log('Browser Date:', new Date().toString());
    console.log('Adjusted Date:', adjustedTime.toString());

    // Determine the time zone of the adjusted time using the browser's settings
    const localTimeZone = Intl.DateTimeFormat('en-US', {
        timeZoneName: 'short'
    }).format(adjustedTime);

    // Return the adjusted time and the calculated time zone as a string
    return `${adjustedTime.toLocaleString('en-US')} (${localTimeZone})`;
}

// Example usage:
const offsetMinutes = -240;  // Example offset for UTC-4
const calculatedTimeZone = calculateTimeZoneByOffset(offsetMinutes);
console.log('Calculated Local Time Zone:', calculatedTimeZone);
